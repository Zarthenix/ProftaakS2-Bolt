@model ProftaakProject.Models.ViewModels.PostModels.ArtikelGoedkeurenViewModel
@{
    ViewData["Title"] = "ArtikelGoedkeuren";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="form-row">
    <h1>ArtikelGoedkeuren</h1>
    <div class="form-group col-md-12">
        <label class="postAanmaakKoppen">Titel</label>
        <input class="form-control" value="@Model.Post.Titel" readonly />
    </div>
    <div class="form-group col-md-12">
        <label class="postAanmaakKoppen">Inhoud</label>
        <textarea class="postAanmakenInhoud" readonly>@Model.Post.Inhoud</textarea>
    </div>
    <div class="col-md-5">
        <label class="postAanmaakKoppen">Tag</label>
        <input class="form-control" value="@Model.Post.Tag.Naam" readonly />
    </div>
    <div class="col-md-5">
        <label class="postAanmaakKoppen">Datum</label>
        <input class="form-control" value="@Model.Post.Datum.ToString()" readonly />
    </div>
    <div class="col-md-12">
        <form method="post">
            <button asp-action="Goedkeuren" type="submit" class="btn btn-primary" value="@Model.Post.Id" name="postId">Goedkeuren</button>
            <button asp-action="Afkeuren" type="submit" class="btn btn-primary" value="@Model.Post.Id" name="postId">Afkeuren</button>
        </form>
    </div>
</div>