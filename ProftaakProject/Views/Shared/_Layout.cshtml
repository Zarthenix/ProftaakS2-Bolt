<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProftaakProject</title>
    <environment include="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <script src="https://kit.fontawesome.com/590950580f.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css" />
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    </environment>
</head>
<body class="d-flex flex-column h-100">
    <header>
        <div class="container-fluid" id="mainNav">
            <div class="row">
                <nav class="navbar navbar-expand-sm fixed-top easyflex_nav">
                    <div class="col-md-3">

                        <h1 id="text_nav">
                            <a href="@Url.Action("Index", "Home")"> <i>Easyflex</i></a>
                        </h1>
                    </div>
                    @*@if (User.Identity.IsAuthenticated)
                        {
                            <div class="col-md-3">
                                <a href="@Url.Action("Notificaties", "Home")" style="color:white">Notifications</a>
                            </div>
                        }*@
                    <div class="offset-6 col-md-2">
                        <form class="form-inline" method="get">
                            <div>
                                <input class="form-control mr-sm-2" type="text" placeholder="Zoek hier een vraag">
                                <button class="btn btn-outline-light" type="submit">Zoeken</button>
                            </div>
                        </form>
                    </div>
                </nav>
            </div>
        </div>
    </header>
    <main role="main" class="flex-shrink-0">
        <div class="container-fluid" id="margin_top">
            <div class="row">
                <div class="col-md-7 sideBar" id="nav">
                    <nav id="colorlib-main-menu" role="navigation">
                        <div>
                            <a class="nav-link side-bar-text" asp-controller="Home" asp-action="Index"><i class="fas fa-home fa-2x icon"></i><label>Home</label></a>
                            @if (Context.User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link side-bar-text" asp-controller="Account" asp-action="Profiel"><i class="far fa-user-circle fa-2x icon"></i><label>Profiel</label></a>

                                <div class="dd">
                                    <a class="nav-link side-bar-text" asp-controller="Home" asp-action="Index"><i class="far fa-newspaper fa-2x icon"></i><label>Post Menu</label></a>
                                </div>
                                <div class="ddm">
                                    <a class="nav-link side-bar-text" asp-controller="Post" asp-action="ArtikelToevoegen"><label>Artikel Posten</label></a>
                                    <a class="nav-link side-bar-text" asp-controller="Post" asp-action="VraagToevoegen"><label>Vraag Posten</label></a>
                                    <a class="nav-link side-bar-text" asp-controller="Post" asp-action="FAQ"><label>FAQ</label></a>
                                    @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                                    {
                                        <a class="nav-link side-bar-text" asp-controller="Post" asp-action="AllePosts"><label>Alle Posts</label></a>
                                    }
                                </div>
                                <a class="nav-link side-bar-text" asp-controller="Account" asp-action="Geschiedenis"><i class="fas fa-history fa-2x icon"></i><label>Geschiedenis</label></a>
                                <a class="nav-link side-bar-text" asp-controller="Evenement" asp-action="Index"><i class="far fa-calendar-alt fa-2x icon"></i><label>Evenementen</label></a>
                                <a class="nav-link side-bar-text" asp-controller="Uitzend" asp-action="Index"><i class="fas fa-podcast fa-2x icon"></i><label>Uitzendbureaus</label></a>
                                <a class="nav-link side-bar-text" asp-controller="Home" asp-action="Notificaties"><i class="far fa-bell fa-2x icon"></i><label>Notificaties</label></a>
                            }
                            else
                            {
                                <a class="nav-link side-bar-text" asp-controller="Account" asp-action="Login"><i class="fas fa-chalkboard-teacher fa-2x icon"></i><label>Login</label></a>
                            }
                            @if (Context.User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link side-bar-text" asp-controller="Account" asp-action="Logout"><i class="fas fa-sign-out-alt fa-2x icon"></i><label>Uitloggen</label></a>
                            }
                        </div>
                    </nav>
                </div>
            </div>
            <div class="col-md-6 offset-md-2 viewBody">
                @RenderBody()
            </div>
        </div>
    </main>
    <partial name="_CookieConsentPartial" />
    <partial name="_ValidationScriptsPartial" />

    <footer class="footer mt-auto py-3">
        <div class="container">
            <p>&copy; 2019 - ProftaakProject</p>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
