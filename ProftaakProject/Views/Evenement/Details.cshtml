
@{
    ViewData["Title"] = "Details";
    @model ProftaakProject.Models.ViewModels.EventModels.EvenementViewModel
}


    <div class="col-md-6">
        <h2>Details</h2>
        <div class="card">
            <div class="card-header" style="height: 60px;">
                <div class="card-title"><h3>@Model.Naam</h3></div>
            </div>
            <div class="card-body">
                <h5>Datum:</h5> <h6>@Model.Datum</h6>
                <h5>Maximum deelnemers:</h5> <h6>@Model.MaxDeelnemers</h6>
                <h5>Locatie:</h5> <h6>@Model.Locatie</h6>
                <h5>Omschrijving:</h5> <h6>@Model.Omschrijving</h6>
</div>
            <div class="card-footer">
                <h4>Host: <a href="@Url.Action("Profiel", "Account", new {id = Model.HostId})">@Model.HostNaam</a></h4>
            </div>
        </div>
    </div>
