@model ProftaakProject.Models.ViewModels.ProfielViewModel
@{
    ViewData["Title"] = "ProfielBewerken";
}

<hr />
<div class="row">

<h2>Profiel Bewerken</h2>
    <div class="col-md-4">
        <form asp-action="Profiel">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Naam" class="control-label"></label>
                <input asp-for="Naam" class="form-control" readonly />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" readonly />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Geslacht" class="control-label"></label>
                <input asp-for="Geslacht" class="form-control" readonly />
                <span asp-validation-for="Geslacht" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Geboortedatum" class="control-label"></label>
                <input asp-for="Geboortedatum" class="form-control" readonly />
                <span asp-validation-for="Geboortedatum" class="text-danger"></span>
            </div>
            <button class="btn-primary" asp-controller="Account" asp-action="ProfielBewerken" onclick="">Bewerken</button>
            @*<button type="submit" class="btn-primary">Opslaan</button>*@
        </form>
    </div>
</div>


