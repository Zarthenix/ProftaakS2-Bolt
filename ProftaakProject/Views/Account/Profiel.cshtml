@model ProftaakProject.Models.ViewModels.ProfielViewModel
@{
    ViewData["Title"] = "Profiel";
}

<h2>Profiel</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="get" asp-controller="Account">
            <div class="form-group">
                <input type="hidden" asp-for="ProfielId" class="form-control" readonly />
            </div>
            <div class="form-group">
                <div class="col-xs-6">
                    <label class="control-label"></label>
                    <input asp-for="Naam" class="form-control" readonly />
                    <span asp-validation-for="Naam" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <input asp-for="Email" class="form-control" readonly />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <input asp-for="Geslacht" class="form-control" readonly />
                <span asp-validation-for="Geslacht" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <input asp-for="Geboortedatum" class="form-control" type="date" readonly />
                <span asp-validation-for="Geboortedatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <input asp-for="Rol.Naam" class="form-control" readonly />
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>

            @if (Model.ProfielId == Model.InlogId)
            {
                <a asp-action="ProfielBewerken" class="btn btn-primary"><i class="fa fa-edit"></i>Bewerken</a>
            }

            @if (User.IsInRole("Admin"))
            {
                <a style="margin-top:10px" class="btn btn-primary" href="@Url.Action("RolGeven", "Account", new { Id = Model.ProfielId })"><i class="fa fa-user-tag"></i>Rol Geven</a>
            }
        </form>
    </div>
</div>


